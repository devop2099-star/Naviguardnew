<Window x:Class="Naviguard.WPF.Views.MenuMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Naviguard.WPF.Views"
        xmlns:controls="clr-namespace:Naviguard.WPF.Controls"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        FontSize="15"
        Height="691" Width="1020"
        MinWidth="1020" MinHeight="691"
        ResizeMode="CanResize"
        Title="Nx Sphere" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Border x:Name="MainBorder"
        CornerRadius="30"
        Background="White"
        SnapsToDevicePixels="True"
        Padding="0"
        MouseLeftButtonDown="MainBorder_MouseLeftButtonDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:TopBarControl HorizontalAlignment="Right"
                                VerticalAlignment="Top"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="MenuColumn" Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="SideMenu"
                    Background="White"
                    CornerRadius="25"
                    Margin="20,3,20,28"
                    Grid.Column="0"
                    SnapsToDevicePixels="True"
                    Effect="{DynamicResource ShadowEffect}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">

                            <Button ToolTip="Naviguard"
                                x:Name="btnNav"
                                Click="btnNav_Click"
                                Style="{StaticResource IconButtonStyle}">
                                <Path Data="{StaticResource dashboardIcon}" Fill="#041a23" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>

                            <Rectangle Height="20" Fill="Transparent"/>

                            <Button x:Name="btnFilterPages" ToolTip="Filter Pages" Click="btnFilterPages_Click"
                                Style="{StaticResource IconButtonStyle}">
                                <Path Data="{StaticResource filterIcon}" Fill="#041a23" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>

                            <Rectangle Height="20" Fill="Transparent"/>

                            <Button x:Name="btnEditGroups" ToolTip="Edit Groups" Click="btnEditGroups_Click"
                                Style="{StaticResource IconButtonStyle}">
                                <Path Data="{StaticResource manageIcon}" Fill="#041a23" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>


                            <Rectangle Height="20" Fill="Transparent"/>

                            <Button x:Name="btnAssignUserToGroups" ToolTip="Asignar a grupos" Click="btnAssignUserToGroups_Click"
                                Style="{StaticResource IconButtonStyle}">
                                <Path Data="{StaticResource assignUserIcon}" Fill="#041a23" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>

                            <Rectangle Height="20" Fill="Transparent"/>

                            <Button x:Name="btnMarcos" ToolTip="Marcos" Click="btnMarcos_Click"
                                Style="{StaticResource IconButtonStyle}">
                                <Path Data="{StaticResource marcosIcon}" Fill="#041a23" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>

                            <Rectangle Height="20" Fill="Transparent"/>

                            <Button x:Name="btnEditCustomLogin" ToolTip="Edit Custom Login" Click="btnEditCustomLogin_Click"
                                Style="{StaticResource IconButtonStyle}">
                                <Path Data="M7,14C5.9,14 5,13.1 5,12C5,10.9 5.9,10 7,10C8.1,10 9,10.9 9,12C9,13.1 8.1,14 7,14M12.65,10C11.83,7.67 9.61,6 7,6C3.13,6 0,9.13 0,13C0,16.87 3.13,20 7,20C9.61,20 11.83,18.33 12.65,16H14V20H18V16H22V10L12.65,10Z" 
                                      Fill="#041a23" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>
                        </StackPanel>

                        <Button x:Name="btnLogout"
                            Grid.Row="2"
                            ToolTip="Cerrar Sesión"
                            Click="btnLogout_Click"
                            Style="{StaticResource IconButtonStyle}"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,20">
                            <Path Data="M10.09,15.59L11.5,17L16.5,12L11.5,7L10.09,8.41L12.67,11H3V13H12.67L10.09,15.59M19,3H5C3.89,3 3,3.9 3,5V9H5V5H19V19H5V15H3V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3Z" 
                              Fill="#4A5568" Width="22" Height="22" Stretch="Uniform"/>
                        </Button>
                    </Grid>
                </Border>

                <Grid x:Name="MainContentArea"
                  Background="White"
                  Grid.Column="1"
                  Margin="0,0,10,15">
                    <ContentControl x:Name="ContentPresenter" Content="{Binding MyChatSphereView}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>