<UserControl x:Class="Naviguard.WPF.Views.Browser.MenuNaviguardPages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:Naviguard.WPF.Converters"
             xmlns:local="clr-namespace:Naviguard.WPF.Views.Browser"
             xmlns:vm="clr-namespace:Naviguard.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <converters:SizeToRectConverter x:Key="SizeToRectConverter"/>
        <SolidColorBrush x:Key="TopBarBackgroundBrush" Color="#D91E1E1E"/>
        <DropShadowEffect x:Key="ShadowEffect" Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.15"/>

        <!-- ✅ AGREGAR: Geometría Cancel -->
        <PathGeometry x:Key="Cancel" Figures="M 19,6.41 17.59,5 12,10.59 6.41,5 5,6.41 10.59,12 5,17.59 6.41,19 12,13.41 17.59,19 19,17.59 13.41,12 Z"/>

        <!-- ✅ AGREGAR: Geometría Menu -->
        <PathGeometry x:Key="Menu" Figures="M3,6 H21 V8 H3 Z M3,11 H21 V13 H3 Z M3,16 H21 V18 H3 Z"/>

        <!-- ✅ AGREGAR: Estilo IconButtonStyle2 -->
        <Style x:Key="IconButtonStyle2" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#A0AEC0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="mainBorder" 
                                Background="Transparent" 
                                CornerRadius="16"
                                Padding="12,6"
                                Margin="4,0">
                            <ContentPresenter ContentSource="Header" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="mainBorder" Property="Background" Value="#6a6a6a"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="mainBorder" Property="Background" Value="#4a4a4a"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource ModernTabItemStyle}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <UniformGrid IsItemsHost="True" 
                                     Rows="1" 
                                     VerticalAlignment="Center" 
                                     HorizontalAlignment="Stretch"
                                     Margin="15,0,0,0"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernContextMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" CornerRadius="4" Margin="2">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#374151"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Effect="{StaticResource ShadowEffect}">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border x:Name="MainBorder" SnapsToDevicePixels="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFF" Offset="0.0" />
                <GradientStop Color="#F0F2F5" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de pestañas -->
            <Grid Grid.Row="0">
                <Grid x:Name="MenuContainerGrid" VerticalAlignment="Top" Height="60">
                    <Border x:Name="TopMenu" Background="#1e1e1e" CornerRadius="21" Height="42" Margin="15,10,15,8" VerticalAlignment="Top" Effect="{StaticResource ShadowEffect}" Panel.ZIndex="99">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- ✅ SIMPLIFICAR: TabControl con binding correcto -->
                            <TabControl Grid.Column="0" 
                                       ItemsSource="{Binding OpenTabs}" 
                                       SelectedItem="{Binding SelectedTab, Mode=TwoWay}">
                                <TabControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding PageName}" 
                                                       VerticalAlignment="Center" 
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="150"
                                                       ToolTip="{Binding PageName}"/>

                                            <Button Background="Transparent" 
                                                    BorderThickness="0" 
                                                    Cursor="Hand" 
                                                    Margin="8,0,0,0"
                                                    Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <Path Data="{StaticResource Cancel}" 
                                                      Fill="#AAAAAA"
                                                      Width="10" Height="10" 
                                                      Stretch="Uniform"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </TabControl.ItemTemplate>
                            </TabControl>

                            <!-- Botón de menú -->
                            <Button Grid.Column="1"
                                    x:Name="btnOpenPagesMenu"
                                    Click="OpenPagesMenu_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Margin="0,0,15,0"
                                    Width="40" Height="40">
                                <Path Data="{StaticResource Menu}"
                                      Fill="White" 
                                      Width="20" Height="20" 
                                      Stretch="Uniform"/>

                                <Button.ContextMenu>
                                    <ContextMenu ItemsSource="{Binding Pages}" 
                                                 Style="{StaticResource ModernContextMenuStyle}">
                                        <ContextMenu.ItemContainerStyle>
                                            <Style TargetType="MenuItem" BasedOn="{StaticResource ModernContextMenuItemStyle}">
                                                <Setter Property="Header" Value="{Binding PageName}"/>
                                                <Setter Property="Command" Value="{Binding DataContext.OpenPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                                <Setter Property="CommandParameter" Value="{Binding}"/>
                                            </Style>
                                        </ContextMenu.ItemContainerStyle>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Área del navegador -->
            <Border x:Name="MainContentArea" 
                    Grid.Row="1" 
                    Background="#FFFFFF" 
                    Margin="20,0,20,20" 
                    CornerRadius="15" 
                    Effect="{StaticResource ShadowEffect}">
                <Border.Clip>
                    <RectangleGeometry RadiusX="15" RadiusY="15">
                        <RectangleGeometry.Rect>
                            <MultiBinding Converter="{StaticResource SizeToRectConverter}">
                                <Binding ElementName="MainContentArea" Path="ActualWidth"/>
                                <Binding ElementName="MainContentArea" Path="ActualHeight"/>
                            </MultiBinding>
                        </RectangleGeometry.Rect>
                    </RectangleGeometry>
                </Border.Clip>

                <!-- ✅ CRÍTICO: ContentControl que muestra el navegador -->
                <ContentControl Content="{Binding CurrentBrowserView}"
                               HorizontalContentAlignment="Stretch"
                               VerticalContentAlignment="Stretch"/>
            </Border>
        </Grid>
    </Border>
</UserControl>