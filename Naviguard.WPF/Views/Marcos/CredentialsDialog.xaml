<Window x:Class="Naviguard.WPF.Views.Marcos.CredentialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credenciales Requeridas" 
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="15" Background="White" 
            BorderBrush="#E2E8F0" BorderThickness="1"
            Effect="{DynamicResource ShadowEffect}">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TÃ­tulo -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="ðŸ” Credenciales" FontSize="20" FontWeight="Bold" Foreground="#031828"/>
                <TextBlock x:Name="TxtSiteName" Text="Para el sitio: example.com" 
                           Margin="0,5,0,0" Foreground="#64748B" FontSize="13"/>
            </StackPanel>

            <!-- Usuario -->
            <TextBlock Grid.Row="1" Text="Usuario o Correo" Margin="0,0,0,6" 
                       FontWeight="SemiBold" Foreground="#1E293B" FontSize="13"/>
            <TextBox x:Name="TxtUsername" Grid.Row="2" Margin="0,0,0,15"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Tag="Ingresa tu usuario"/>

            <!-- ContraseÃ±a -->
            <TextBlock Grid.Row="3" Text="ContraseÃ±a" Margin="0,0,0,6" 
                       FontWeight="SemiBold" Foreground="#1E293B" FontSize="13"/>
            <Border Grid.Row="4" CornerRadius="15" BorderBrush="#ccc" BorderThickness="1" 
                    Background="White" Height="35">
                <PasswordBox x:Name="TxtPassword" 
                             VerticalContentAlignment="Center"
                             Padding="8,4" FontSize="14"
                             BorderThickness="0" Background="Transparent"/>
            </Border>

            <!-- Botones -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancel" Content="Cancelar" 
                        Width="90" Height="32" Margin="0,0,10,0"
                        Click="BtnCancel_Click"
                        Background="#E2E8F0" Foreground="#1E293B"
                        Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="13" Padding="12,3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="BtnOk" Content="Iniciar SesiÃ³n" 
                        Width="110" Height="32"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="BtnOk_Click" IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
